<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FontTextView">
        <attr name="fontName">
            <enum name="iconFonts" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomView">
        <attr name="hintColor" format="color" />
        <attr name="cursorColor" format="color"/>
        <attr name="clear" format="boolean" />
        <attr name="maxLength" format="reference|integer" />

        <attr name="message" format="string" />
        <attr name="messageColor" format="color"/>

        <attr name="foregroundColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="EditTextView" parent="CustomView">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:textStyle" />

        <attr name="foregroundColor"/>
        <attr name="backgroundColor"/>

        <attr name="android:hint"/>
        <attr name="android:inputType"/>
        <attr name="android:imeOptions" />
        <attr name="android:textColorHint" />

        <attr name="cursorColor" />
        <attr name="clear"/>
        <attr name="maxLength"/>
        <attr name="message"/>
        <attr name="messageColor"/>

    </declare-styleable>

    <declare-styleable name="EditText2View" parent="CustomView">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:textStyle" />

        <attr name="foregroundColor"/>
        <attr name="backgroundColor"/>

        <attr name="hintColor" />
        <attr name="cursorColor" />
        <attr name="clear"/>
        <attr name="maxLength"/>
        <attr name="messageColor"/>

        <attr name="message1" format="string"/>
        <attr name="message2" format="string"/>
        <attr name="text1" format="string" />
        <attr name="text2" format="string" />
        <attr name="hint1" format="string" />
        <attr name="hint2" format="string" />
        <attr name="ime1" format="reference|integer" />
        <attr name="ime2" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="NiceTextView">
        <attr name="android:typeface" />
        <attr name="android:textColor" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textStyle" />

        <attr name="backgroundColor"/>

        <attr name="textPadding" format="dimension"/>
        <attr name="textStrokeWidth" format="dimension" />
        <attr name="textStrokeColor" format="color" />

    </declare-styleable>

</resources>
