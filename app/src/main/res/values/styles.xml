<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="backgroundColor">@drawable/background_edit_text_view</item>
        <item name="messageColor">@color/colorAccent</item>
        <item name="cursorColor">@drawable/edit_text_view_cursor</item>
    </style>

    <style name="EditText2View" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="backgroundColor">@drawable/background_edit_text_view</item>
        <item name="messageColor">@color/colorAccent</item>
        <item name="cursorColor">@drawable/edit_text_view_cursor</item>
    </style>

</resources>
